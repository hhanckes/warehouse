<%= form_for(@storage_item) do |f| %>
  <% if @storage_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@storage_item.errors.count, "error") %> prohibited this storage_item from being saved:</h2>

      <ul>
      <% @storage_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="form-group">
	<%= f.label :photo, 'Foto (debe ser cuadrada)', :class => 'control-label' %>
	<div class="row" style="margin-bottom:10px">
		<div class="col-sm-1">
      		<%= image_tag @storage_item.photo.url(:tiny) %>
		</div>
		<div class="col-sm-11">
			<%= f.file_field :photo, :class => 'btn btn-default' %>
		</div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :public_name, 'Nombre', :class => 'control-label' %><br>
    <%= f.text_field :public_name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descripción', :class => 'control-label' %><br>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price, 'Precio', :class => 'control-label' %><br>
    <%= f.text_field :price, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :return_price, 'Precio Devolución', :class => 'control-label' %><br>
    <%= f.text_field :return_price, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :width, 'Ancho', :class => 'control-label' %><br>
    <%= f.text_field :width, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :height, 'Alto', :class => 'control-label' %><br>
    <%= f.text_field :height, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :depth, 'Profundidad', :class => 'control-label' %><br>
    <%= f.text_field :depth, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :dimensions_measure, 'Medidas (ej: cms)', :class => 'control-label' %><br>
    <%= f.text_field :dimensions_measure, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :capacity, 'Capacidad', :class => 'control-label' %><br>
    <%= f.text_field :capacity, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :capacity_measure, 'Medida de la capacidad (ej: kgs, lts)', :class => 'control-label' %><br>
    <%= f.text_field :capacity_measure, :class => 'form-control' %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Guardar', :class => 'btn btn-default' %>
  </div>
<% end %>
