<!-- Modal -->
<div class="modal fade" id="new_proof" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="text-align:left">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title" id="myModalLabel">Agregar Prueba de Entrega</h4>
      </div>
      <div class="modal-body">
		  <div style="form-group">
			<%= f.label :photo, 'Foto del documento de prueba', :class => 'control-label' %>
			<div class="row" style="margin-bottom:10px">
				<div class="col-md-2">
		      		<%= image_tag @storage_item_return_proof.photo.url(:xs) %>
				</div>
				<div class="col-md-10">
					<%= f.file_field :photo, :class => 'btn btn-default' %>
				</div>
		    </div>
		  </div>
		  <div class="form-group">
		    <%= f.label :comments, :class => 'control-label' %>
		    <%= f.text_area :comments, :class => 'form-control' %>
		  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
		<%= f.submit 'Guardar', :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>