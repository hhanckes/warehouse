<div style="text-align:center">
	<h2>Ingresa con tu correo y clave</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: "form-inline", role: "form" }) do |f| %>
	  <div class="row">
		<div class="col-md-12">
	  	<%= f.email_field :email, placeholder: 'Correo', autofocus: true, :class => "form-control input-sm", :style => 'width:20%' %>
		<%= f.password_field :password, placeholder: 'Clave', autocomplete: "off", :class => "form-control input-sm", :style => 'width:20%' %>
		<%= f.submit "Ingresar", class: 'btn btn-default', style: 'vertical-align:top;' %>
		</div>
	  </div>
	  <% if devise_mapping.rememberable? -%>
	  <div class="row" style="margin-top:5px">
		<div class="col-md-12">
			<div class="checkbox">
		    <label>
				<%= f.check_box :remember_me %> Recordarme en este computador
			</label>
			</div>
		</div>
	  </div>
	  <% end -%>
	<% end %>

	<%= render "devise/shared/links" %>
</div>