<div style="text-align:center">
	<h2>¿Se te olvidó tu contraseña?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-inline", role: "form" }) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="row">
		<div class="col-md-12">
	  		<%= f.email_field :email, placeholder: 'Ingresa tu correo', autofocus: true, class: 'form-control input-sm', :style => 'width:20%' %>
			<%= f.submit "Enviar instrucciones al correo", class: 'btn btn-default', style: 'vertical-align:top;' %>
		</div>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>