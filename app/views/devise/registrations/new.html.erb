<div style="text-align:center">
	<h2>Crear una cuenta</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: "form-inline", role: "form" }) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="row" style="margin:10px">
		<div class="col-md-12">
	  		<%= f.text_field :name, placeholder: 'Nombre', autofocus: true, :class => "form-control input-sm", :style => 'width:20%' %>
		</div>
	  </div>
	  <div class="row" style="margin:10px">
		<div class="col-md-12">
	  		<%= f.email_field :email, placeholder: 'Correo', autofocus: false, :class => "form-control input-sm", :style => 'width:20%' %>
		</div>
	  </div>
	  <div class="row" style="margin:10px">
		<div class="col-md-12">
	    	<%= f.password_field :password, placeholder: 'Clave', autocomplete: "off", :class => "form-control input-sm", :style => 'width:20%' %>
	    	<%= f.password_field :password_confirmation, placeholder: 'Repite tu clave', autocomplete: "off", :class => "form-control input-sm", :style => 'width:20%' %>
		</div>
	  </div>
	  <div class="row">
		<div class="col-md-12">
			<%= f.submit "Crear cuenta", class: 'btn btn-default', style: 'vertical-align:top;' %>
		</div>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>