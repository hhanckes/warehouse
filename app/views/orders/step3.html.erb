<ul class='nav nav-wizard'>
  <li>Pedido</li>
  <li>Detalles</li>
  <li class='active'>Confirmar y Pagar</li>
</ul>

<div class="row new-order-step2">
	<div class="col-md-12">
		<h1 class="center">Por favor confirma tu orden</h1>
		<hr />
		<table class="table" style="width:500px; margin:0 auto;">
			<% @order.storage_items.uniq.each do |si| %>
			<tr>
				<th><%= @order.storage_items.where('storage_item_id = ?', si.id).size %> <%= si.name %></th>
				<td><%= number_to_currency @order.storage_items.where('storage_item_id = ?', si.id).size*si.price %></td>
			</tr>
			<% end %>
			<tr style="border-bottom:2px solid black;">
				<th>Retiro de productos</th>
				<td>Gratis!</td>
			</tr>
			<tr>
				<th>Total</th>
				<th><%= number_to_currency @order.order_storage_items.joins(:storage_item).sum('price'), precision: 0 %></th>
			</tr>
		</table>
		<hr />
		<h2 class="center">Lugar de entrega</h2>
		<table class="table" style="width:500px; margin:0 auto;">
			<tr>
				<th>Nombre</th>
				<td><%= @order.address.receiver %></td>
			</tr>
			<tr>
				<th>Dirección</th>
				<td><%= @order.address.name %></td>
			</tr>
			<tr>
				<th>Código postal</th>
				<td><%= @order.address.post_code %></td>
			</tr>
			<tr>
				<th>Area</th>
				<td><%= @order.address.area.name unless @order.address.area.blank? %></td>
			</tr>
			<tr>
				<th>Teléfono</th>
				<td><%= @order.address.phone_number %></td>
			</tr>
			<tr>
				<th>Hora de entrega</th>
				<td><%= l(@order.delivery_date, format: :medium).capitalize %> entre <%= @order.delivery_time %></td>
			</tr>
		</table>
		<hr />
		<h2 class="center">¿Cómo vas a pagar?</h2>
		<div class="center">
			<p><%= link_to 'Pagar con Transferencia Bancaria', '#', :class => 'btn btn-primary', 'data-toggle' => "modal", 'data-target' => "#PaymentModal" %></p>
			<%= render 'payment_modal', id: 'PaymentModal' %>
			<p><%= link_to 'Pago contra entrega', '#', :class => 'btn btn-primary' %></p>
			<p><%= link_to 'Tarjeta de crédito o débito', '#', :class => 'btn btn-primary' %></p>
		</div>
		<div class="form-actions center">
		  <%= submit_tag 'Ir a Pagar', :class => 'btn btn-default' %>
		</div>
	</div>
</div>